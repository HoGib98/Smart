<script>
require([
    'jquery', 'owlcrousel' , 'bootstrap','magnificpop','niceselect','popper'  // the alias for "mage/accordion"
], function ($) {
    $(function () { // to ensure that code evaluates on page load
    
   
          // product carousel - start
  // --------------------------------------------------
  $('#product-featured').owlCarousel({
    loop:true,
    margin:30,
    autoplay:true,
    smartSpeed:1000,
    autoplayTimeout:6000,
    autoplayHoverPause:true,
    responsive:{
      0:{
        items:2,
        nav:true,
        margin:15,
        dots:false,
      },
      600:{
        items:3,
        nav:true,
        dots:false,
      },
      1000:{
        items:3,
        nav:false,
        dots:false,
      },
      1100:{
        items:4,
        nav:false,
        dots:false,
      },
      1920:{
        items:4,
        nav:false,
        dots:false,
      }
    }
  });
  // product carousel - end
  // 
    });
});
</script>